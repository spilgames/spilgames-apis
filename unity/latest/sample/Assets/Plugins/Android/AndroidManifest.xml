<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="preferExternal"
	package="com.spilgames.development" 
	android:versionName="1.0" 
	android:versionCode="1">
	
	<supports-screens android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" android:anyDensity="true" />
		
	<application android:name="com.spilgames.framework.SpilApplication" android:debuggable="true">		
		<activity android:name="com.unity3d.player.UnityPlayerActivity"  android:label="@string/app_name"  
			android:configChanges="fontScale|keyboard|keyboardHidden|locale|mnc|mcc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|uiMode|touchscreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
         <receiver
            android:name="com.spilgames.framework.receivers.SpilInstallReferrerReciever" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.spilgames.framework.receivers.NotificationsReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.spilgames.development" />

            </intent-filter>
        </receiver>
        <receiver android:name="com.spilgames.framework.receivers.NotificationsReceiver" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RETRY" />

                <category android:name="com.spilgames.development" />
            </intent-filter>
        </receiver>
		
	</application>


	 <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.spilgames.development.permission.C2D_MESSAGE" />

    <permission
        android:name="com.spilgames.development.permission.C2D_MESSAGE"
        android:protectionLevel="normal" />

</manifest>
